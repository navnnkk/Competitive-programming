#include<bits/stdc++.h>
#define ll long long
#define pb push_back
#define mp make_pair
#define fi first
#define se second
#define sf(a) scanf("%d",&a);
#define sf(a,b) scanf("%d %d",&a,&b);
#define pf(a) printf("%d\n",a);
#define loop(i,n) for(int i=0;i<n;i++)
#define in(i,n,a) for(int i=0;i<n;i++) cin>>a[i];
#define nitrous ios_base::sync_with_stdio(false); cin.tie(NULL);
using namespace std;

/*bool compare(const pr<string,int> &a, const pr<string,int> &b)
{
    return a.se > b.se;
}*/

int main()
{
    int t,n,a,diff,diff_1;
    cin>>t;
    while(t--)
    {
        cin>>n;
        vector<int>v;

        loop(i,n)
        {
            cin>>a;
            v.pb(a);
        }

        sort(v.begin(),v.end());

        diff = v[1] - v[0];

        loop(i,n-1)
        {
            diff_1 = v[i+1] - v[i];
            diff = min(diff_1,diff);
        }
        cout<<diff<<"\n";
    }
    return 0;
}
